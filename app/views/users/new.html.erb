<div class="depot_form" >
  <%= form_for @user do |f| %>
  <% if @user.errors.any? %>
  <div id="error_explanation" >
    <h2><%= pluralize(@user.errors.count, "error") %>
      prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <fieldset>
      <legend>Enter User Details</legend>
      <div>
        <%= f.label :login %>:
        <%= f.text_field :login, :size => 40 %>
      </div>
      <div>
        <%= f.label :pass, 'Password' %>:
        <%= f.password_field :pass, :size => 40 %>
      </div>
      <div>
        <%= f.label :pass_confirmation, 'Confirm' %>:
        <%= f.password_field :pass_confirmation, :size => 40 %>
      </div>
      <div>
        <%= f.label 'Email, not necessarily' %>:
        <%= f.text_field :email, :size => 40 %>
      </div>
      <div>
        <%= f.submit %>
      </div>
    </fieldset>
    <% end %>
  </div>
</div>