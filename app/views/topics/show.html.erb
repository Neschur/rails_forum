<b>Title:</b>
<%= @topic.title %>, 
<%if isadmin%>
<%= link_to 'Edit', edit_topic_path(@topic) %>
<%end%>
<%@posts=@topic.posts.paginate :page=>params[:page], :per_page=>5 %>
<p><%= will_paginate @posts%></p>

<div class='desc'>
	<b>Part:</b>
	<%= link_to @topic.part.title, '/parts/'+@topic.part_id.to_s %>,
	<b>Author:</b>
	<%if @topic.user%>
	<%= @topic.user.login %>
	<%else%>
	USER REMOVED
	<%end%>
</div>

<%= render 'post'%>
<p><%= will_paginate @posts%></p>
<button id='b_b'>b</button>
<% @post=Post.new %>
<%= form_for(@post) do |f| %>
<% if @post.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
	<ul>
		<% @post.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>
<div class="field">
	<i><%= f.label :body %></i><br />
	<%= f.text_area :body, :cols => 60, :rows => 10, :class => 'app_input'%>
</div>
<%= f.hidden_field :topic_id, :value=>@topic.id %>
<div class="actions">
	<%= f.submit %>
</div>
<% end %>
