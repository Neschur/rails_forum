<b>Title:</b>
<%= @topic.title %>, 
<%if can? :edit, Topic%>
<%= link_to 'Edit', edit_topic_path(@topic) %>
<%end%>

<div class='desc'>
	<b>Part:</b>
	<%= link_to @topic.part.title, '/parts/'+@topic.part_id.to_s %>,
	<b>Author:</b>
	<%if @topic.user%>
	<%= @topic.user.username %>
	<%else%>
	USER REMOVED
	<%end%>
</div>

<p><%= paginate @posts %></p>
<table id='table'>
	<tr>
		<th></th>
		<th></th>
	</tr>
	<% @posts.each do |post| %>	
		<%= render 'post', :post=>post%>
	<% end %>
</table>
<p><%= paginate @posts %></p>
<!-- <button id='b_b'>b</button> -->
<% @post=Post.new %>
<% if can? :new, Post %>
<%= render 'panel'%>
<%= form_for(@post) do |f| %>
<% if @post.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
	<ul>
		<% @post.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>


<div class="field">
	<%= f.text_area :body, :cols => 60, :rows => 10, :class => 'app_input',  :class=>'field span7', :id=>'new_topic_text'%>
</div>
<%= f.hidden_field :topic_id, :value=>@topic.id %>
<div class="actions">
	<%= f.submit %>
</div>
<% end %>
<% end %>