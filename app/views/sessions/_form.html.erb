<% if !session[:user_id] %>
<%= form_tag('/sessions/new') do %>
<fieldset>
	<legend>Please Log In</legend>
	<div>
		
		<label for="name" >Name:</label>
		
		<%= text_field_tag :name, params[:name] %>
	</div>
	<div>
		<label for="password" >Password:</label>
		<%= password_field_tag :password, params[:password] %>
	</div>
	<div>
		<%= submit_tag "Login" %>
	</div>
</fieldset>
<% end %>
<% else %>
<% user=User.find(session[:user_id])%>
<%=image_tag user.avatar.url, :width=>100, :class=>'leftimg'%>
<br>
You are logged as <%= user.login %>,
<%= link_to 'Exit','/sessions/destroy'%><br>
You have <%= user.posts.count %> posts and <%= user.topics.count %> topics.<br>
Registration date: <%= user.created_at.to_datetime.to_s.scan(/[\d-]+/)[0] %>

<% end %>