<div class="btn-toolbar">
  <div class="btn-group">
      <button class="btn" data-original-title="Bold - Ctrl+B">Bold</button>
      <button class="btn" data-original-title="Italic - Ctrl+I">Italic</button>
      <button class="btn" data-original-title="List">List</button>
      <button class="btn" data-original-title="Img">Img</button>
      <button class="btn" data-original-title="URL">Url</button>
  </div>
</div>
<%= form_tag('/newpost/index') do%>
	<%= text_field_tag :title, params[:title], :size => 400, :class=>'field span7' %><br>
	<%= text_area_tag :body, params[:body], :cols=>60, :rows=>10, :class=>'field span7'%><br>
	<%= hidden_field :part, @ppp %>
	<%= submit_tag "new topic" %><br>
<% end %>