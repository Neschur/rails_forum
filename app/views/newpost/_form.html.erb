<%= render 'topics/panel'%>
<%= form_tag('/newpost/index') do%>
	<%= text_field_tag :title, params[:title], :size => 400, :class=>'field span7' %><br>
	<%= text_area_tag :body, params[:body], :cols=>60, :rows=>10, :class=>'field span7', :id=>'new_topic_text'%><br>
	<%= hidden_field :part, @ppp %>
	<%= submit_tag "new topic" %><br>
<% end %>